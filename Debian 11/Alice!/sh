lb config --distribution bullseye \
--architectures amd64 \
--binary-images iso-hybrid \
--system live \
--mode debian \
--debian-installer cdrom \ 
--debian-installer-distribution bullseye \
--debian-installer-gui false \ 
--archive-areas "main contrib non-free" \
--mirror-bootstrap http://deb.debian.org/debian \
--mirror-binary http://deb.debian.org/debian \
--mirror-binary-security http://security.debian.org/debian-security \
--mirror-debian-installer http://deb.debian.org/debian \
--security true \
--updates true \
--apt-indices false \
--apt-recommends true \
--firmware-binary true \
--firmware-chroot true \
--cache true \
--cache-packages true \
--hdd-label "ALICE_OS" \
--iso-volume "Alice_$(date +%Y%m%d)" \
--iso-publisher "hanedotoaranea - https://github.com/hanedotoaranea" \
--iso-application "GitHub:https://github.com/hanedotoaranea/" \
--bootappend-live "boot=live components quiet splash" \
--bootappend-install "debian-installer/language=ru console-setup/layoutcode=ru" \
--bootloaders "syslinux grub-efi" \
--uefi-secure-boot auto \
--memtest memtest86+ \
--linux-flavours amd64 \
--linux-packages "linux-image linux-headers" \
--initsystem systemd \
--initramfs live-boot \
--initramfs-compression gzip \
--compression gzip \
--checksums sha256 \
--zsync true \
--debconf-frontend noninteractive \
--debconf-priority critical \
--apt apt \
--apt-options "--yes" \
--apt-secure true \
--apt-source-archives false \
--chroot-filesystem squashfs \
--chroot-squashfs-compression-type xz \
--parent-archive-areas "main contrib non-free" \
--parent-mirror-bootstrap http://deb.debian.org/debian \
--parent-mirror-binary http://deb.debian.org/debian \
--parent-mirror-binary-security http://security.debian.org/debian-security \
--parent-mirror-debian-installer http://deb.debian.org/debian \
--parent-debian-installer-distribution bullseye
